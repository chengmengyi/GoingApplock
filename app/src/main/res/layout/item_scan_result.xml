<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:layout_constraintTop_toBottomOf="@id/tv">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_lock_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/scan_lock_selector"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lock_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#3C4C56"
            android:text="App of the lock"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toLeftOf="@id/tv_go"
            app:layout_constraintTop_toTopOf="@id/iv_lock_icon"
            app:layout_constraintLeft_toRightOf="@id/iv_lock_icon"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lock_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:ellipsize="end"
            android:textColor="#717580"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toLeftOf="@id/tv_go"
            app:layout_constraintTop_toBottomOf="@id/tv_lock_title"
            app:layout_constraintLeft_toRightOf="@id/iv_lock_icon"
            android:text="Let your sensitive applications (banking, dating, photos, etc.) lock it down and protect it from prying eyes"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_go"
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:text="GO"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:textColor="@color/white"
            android:background="@drawable/scan_result_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>